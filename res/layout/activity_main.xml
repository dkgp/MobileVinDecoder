<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/scanVIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="scanVIN"
        android:text="SCAN VIN" />

    <EditText
        android:id="@+id/scannedVIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanVIN"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/uploadedImageFilePath"
        android:layout_alignParentBottom="true"
        android:onClick="saveVehicle"
        android:text="@string/save" />

    <EditText
        android:id="@+id/uploadedImageFilePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/scannedVIN"
        android:layout_alignRight="@+id/scannedVIN"
        android:ems="10" />

    <ImageButton
        android:id="@+id/btnTakePicure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSelectImage"
        android:layout_below="@+id/btnSelectImage"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_above="@+id/uploadedImageFilePath"
        android:layout_alignRight="@+id/uploadedImageFilePath"
        android:layout_marginBottom="16dp"
        android:gravity="right|center_vertical"
        android:padding="10dp"
        android:src="@drawable/no_image" />

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/uploadedImageFilePath"
        android:layout_alignTop="@+id/imageView1"
        android:onClick="selectPicture"
        android:text="@string/selectImage" />

</RelativeLayout>