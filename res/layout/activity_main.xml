<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/uploadedImageFilePath"
        android:layout_alignParentBottom="true"
        android:onClick="saveVehicle"
        android:text="@string/save" />

    <ImageButton
        android:id="@+id/btnTakePicure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSelectImage"
        android:layout_below="@+id/btnSelectImage"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/uploadedImageFilePath"
        android:layout_alignTop="@+id/imageView1"
        android:onClick="selectPicture"
        android:text="@string/selectImage" />

    <EditText
        android:id="@+id/uploadedImageFilePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/etYear"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/scannedVIN"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:onClick="scanVIN" />

    <Button
        android:id="@+id/decodeVIN"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@id/scannedVIN"
        android:layout_below="@+id/scannedVIN"
        android:onClick="decodeVIN"
        android:text="Decode" />

    <Button
        android:id="@+id/scanVIN"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/scannedVIN"
        android:layout_below="@+id/scannedVIN"
        android:layout_toLeftOf="@+id/decodeVIN"
        android:onClick="scanVIN"
        android:text="Scan VIN" />

    <EditText
        android:id="@+id/etMake"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scanVIN"
        android:layout_below="@+id/decodeVIN"
        android:ems="10" />

    <EditText
        android:id="@+id/etModel"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scanVIN"
        android:layout_below="@+id/etMake"
        android:ems="10" />

    <EditText
        android:id="@+id/etYear"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scanVIN"
        android:layout_below="@+id/etModel"
        android:ems="10" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etYear"
        android:gravity="right|center_vertical"
        android:padding="10dp"
        android:src="@drawable/no_image" />

</RelativeLayout>